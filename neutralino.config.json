{
  "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",
  "applicationId": "js.neutralino.sample",
  "version": "1.0.0",
  "defaultMode": "window",
  "port": 0,
  "documentRoot": "/docs/",
  "url": "/",
  "enableServer": true,
  "enableNativeAPI": true,
  "tokenSecurity": "one-time",
  "logging": {
    "enabled": true,
    "writeToLogFile": true
  },
  "nativeAllowList": [
    "app.*",
    "os.*",
    "debug.log"
  ],
  "globalVariables": {
    "TEST1": "Hello",
    "TEST2": [
      2,
      4,
      5
    ],
    "TEST3": {
      "value1": 10,
      "value2": {}
    }
  },
  "modes": {
    "window": {
      "title": "metro",
      "width": 1200,
      "height": 800,
      "minWidth": 400,
      "minHeight": 200,
      "center": true,
      "fullScreen": false,
      "alwaysOnTop": false,
      "icon": "/docs/icons/newIcon.png",
      "enableInspector": true,
      "borderless": false,
      "maximize": false,
      "hidden": false,
      "resizable": true,
      "exitProcessOnClose": true
    },
    "browser": {
      "globalVariables": {
        "TEST": "Test value browser"
      },
      "nativeBlockList": [
        "filesystem.*"
      ]
    },
    "cloud": {
      "url": "/docs/#cloud",
      "nativeAllowList": [
        "app.*"
      ]
    },
    "chrome": {
      "width": 800,
      "height": 500,
      "args": "--user-agent=\"Neutralinojs chrome mode\"",
      "nativeBlockList": [
        "filesystem.*",
        "os.*"
      ]
    }
  },
  "cli": {
    "binaryName": "metro",
    "resourcesPath": "/docs/",
    "extensionsPath": "/docs/",
    "clientLibrary": "/docs/js/neutralino.js",
    "binaryVersion": "5.6.0",
    "clientVersion": "5.6.0"
  },
  "buildScript": {
    "mac": {
      "architecture": ["arm64", "universal"],
      "minimumOS": "10.13.0",
      "appName": "Neutralinotest",
      "appBundleName": "Neutralinotest",
      "appIdentifier": "com.valdotorium.neutralinotest",
      "appIcon":  "newIcon.icns"
    },
    "win": {
      "architecture": ["x64"],
      "appName": "Neutralinotest",
      "appIcon": "newIcon.ico"
    },
    "linux": {
      "architecture": ["x64", "arm64", "armhf"],
      "appName": "Neutralinotest",
      "appIcon": "icon.png",
      "appPath":  "/usr/share/ExtBunDemo",
      "appIconLocation": "/usr/share/ExtBunDemo/icon.png"
    }
}}